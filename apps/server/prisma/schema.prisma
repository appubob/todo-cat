generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String @id @default(uuid())
  username          String @unique
  email             String @unique
  passwordHash      String
  coins             Int    @default(0)
  backgroundColorId String   
  hatId             String?
  eyewearId         String?
  furColorId        String

  // Relationships
  tasks     Task[]
  purchases UserPurchase[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  value       Int
  deadline    DateTime
  isRecurring Boolean

  // Relationship to User
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model UserPurchase {
  userId      String
  storeItemId String
  user        User   @relation(fields: [userId], references: [id])

  // This ensures a user can't "own" the same ID twice
  @@id([userId, storeItemId]) 
}